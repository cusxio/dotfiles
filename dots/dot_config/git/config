[init]
  defaultBranch = main

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  line-numbers = true
  ; side-by-side = true
  navigate = true

[merge]
  conflictstyle = zdiff3

[diff]
  mnemonicPrefix = true
  colorMoved = default
  algorithm = histogram

[fetch]
  prune = true
  pruneTags = true

[rerere]
  enabled = true

[alias]
  diff-last = log --stat --oneline HEAD~1..HEAD
  show-untracked = "!git ls-files --others --exclude-standard -z | xargs -0 bat --paging=always"

